@page
@model TürkkannMakinaa.Areas.Admin.Page.Categories.ListModel
@{
}


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Menü</th>
            <th scope="col">Kategori Adı</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td class="row">
                    <br />
                    <a class="btn btn-info" asp-area="Admin" asp-page="Edit" asp-route-id="@item.Id">Düzenle</a>&emsp;
                    <a class="btn btn-danger" asp-area="Admin" asp-page="Delete" asp-route-id="@item.Id">Sil</a>&emsp;
                    <a class="btn btn-primary" asp-area="Admin" asp-page="Detail" asp-route-id="@item.Id">Detay</a>&emsp;&emsp;
                </td>
                <td>
                    @item.CategoryName

                </td>
            </tr>

        }
    </tbody>

</table>
