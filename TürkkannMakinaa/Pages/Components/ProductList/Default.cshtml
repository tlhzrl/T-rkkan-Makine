@using TürkkannMakinaa.Model

@model ProductByCategoryVM


<div class="container">
    <br />

    @if (!string.IsNullOrEmpty(Model.CategoryName))
    {
        <div class="row" style="float:left;">

            <span>
                <a>
                    Toplam : <span class="badge badge-light">@Model.ProductCounts ürün mevcuttur !</span>
                </a>
            </span>
        </div>

        <br />
        <br />
    }



    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-sm-12 col-md-3">
                <div class="thumbnail" style="height:350px !important">
                    <img style="max-height:100px" src="data:image/jpeg;base64,@item.MainPhoto" alt="...">
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <p>
                            @item.Notes

                            @*@Html.Raw(item.Properties)*@
                        </p>
                        <p style="position:absolute; bottom:20px"><a href="/Product/ProductDetail/@item.Id" class="btn btn-primary" role="button">Ürün Detayı</a></p>
                    </div>
                </div>
            </div>
        }
        <div class="clearfix"></div>

    </div>


</div>

